<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.user.hazratim.hazratFr.HazratimFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/hazratimImage"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/hazratim_photo"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shayx Hazratlari haqida ma'lumot"
            android:textColor="@color/black"
            android:fontFamily="@font/titillium_web_bold"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/hazratimImage"
            android:background="#FF03DAC5"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="@+id/hazratimImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/hazratimImage"
            android:text="KITOBLAR"
            android:textColor="@color/black"
            android:fontFamily="@font/titillium_web_bold"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/bookAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/hazratimImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Barchasi"
            android:textColor="#DEC42E"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/bookAll"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/list1"
            android:text="AudioKitoblar"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:fontFamily="@font/titillium_web_bold"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/bookAll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/list1"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Barchasi"
            android:textColor="#DEC42E"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/bookAll2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>