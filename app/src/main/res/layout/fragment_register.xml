<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.user.profile.auth.RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/male"
                    android:layout_width="0dp"
                    android:src="@drawable/male_avatar"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/female"
                    android:src="@drawable/female_avatar"
                    android:layout_width="0dp"
                    android:layout_height="195dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <TextView
                    android:id="@+id/txt_male"
                    android:text="Male"
                    android:fontFamily="@font/bree_serif_regular"
                    android:textSize="23sp"
                    android:gravity="center"
                    style="@style/texts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/txt_female"
                    android:text="Female"
                    android:layout_width="0dp"
                    android:fontFamily="@font/bree_serif_regular"
                    android:textSize="23sp"
                    android:gravity="center"
                    style="@style/texts"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <androidx.legacy.widget.Space
                android:layout_height="20dp"
                android:layout_width="match_parent"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center"
                    android:text="Your name"
                    android:fontFamily="@font/bree_serif_regular"
                    android:textSize="24sp"
                    style="@style/texts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/editNameText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/bree_serif_regular"
                    android:hint="First Name"

                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.legacy.widget.Space
                android:layout_height="20dp"
                android:layout_width="match_parent"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:text="Your age"
                    android:fontFamily="@font/bree_serif_regular"
                    android:textSize="24sp"
                    style="@style/texts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <Spinner
                    android:id="@+id/spinnerAge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.legacy.widget.Space
                android:layout_height="20dp"
                android:layout_width="match_parent"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter your Email"
                app:endIconMode="clear_text"
                app:helperTextTextColor="#FF0000"
                app:startIconDrawable="@drawable/ic_baseline_email_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bree_serif_regular"
                    android:gravity="bottom|center_horizontal"
                    style="@style/texts" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                app:helperTextTextColor="#FF0000"
                app:helperText="1 symbol, uppercase and lowecase, numbers"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editpasswordText"
                    android:layout_width="match_parent"
                    android:maxLength="20"
                    android:gravity="bottom|center_horizontal"
                    android:layout_height="match_parent"
                    style="@style/texts"
                    android:fontFamily="@font/bree_serif_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="@+id/email_et"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/email_et"
                app:layout_constraintTop_toBottomOf="@+id/pass_et">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:fontFamily="@font/bree_serif_regular"
                    android:textSize="24dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="#03DAC5" />

                <ProgressBar
                    android:id="@+id/register_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="16dp"
                    android:elevation="10dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="invisible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/loginLabel"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have you registered before?"
                android:fontFamily="@font/bree_serif_regular"
                style="@style/texts"
                android:layout_marginStart="20dp"
                android:textSize="14dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>