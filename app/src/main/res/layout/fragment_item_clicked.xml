<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.admin.home.ItemClickedFragment">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageBook"
            android:layout_width="170dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/audiobook"
            />
        <TextView
            android:id="@+id/name_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageBook"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/authorName"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:fontFamily="@font/titillium_web_bold"
            android:text="O'tgan Kunlar"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name_book"
            app:layout_constraintStart_toEndOf="@+id/imageBook"
            app:layout_constraintBottom_toBottomOf="@+id/imageBook"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/titillium_web_regular"
            android:textSize="22sp"
            android:text="Abdulla Oripov"
            />
        <TextView
            android:id="@+id/countDownloads"
            android:layout_width="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily=""
            app:layout_constraintTop_toBottomOf="@+id/imageBook"
            app:layout_constraintEnd_toStartOf="@+id/downloadImage"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/downloadImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_download_for_offline_24"
            app:layout_constraintTop_toBottomOf="@+id/imageBook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nested"
            app:layout_constraintStart_toEndOf="@+id/countDownloads"
            />
        <ScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/downloadImage"
            >
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/countDownloads"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/titillium_web_regular"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    />
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>