<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fullLayout"
    style="@style/bg_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.admin.addBook.FinishingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageBookAdmin"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="50dp"
            android:src="@drawable/ic_baseline_add_photo_alternate_24"
            app:layout_constraintTop_toTopOf="parent"
            />
        <EditText
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/black_white_rect_bg"
            android:fontFamily="@font/titillium_web_regular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:hint="Kitob haqida yozing"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageBookAdmin"
            android:layout_marginHorizontal="2dp"
            />
        <EditText
            android:id="@+id/costBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/black_white_rect_bg"
            android:fontFamily="@font/titillium_web_regular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:hint="Kitob narxini yozing. Masalan: 12400"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/description"
            android:layout_marginHorizontal="22dp"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/fileBook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/costBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_upload_file_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KITOBNI TANLASH"
            app:layout_constraintTop_toBottomOf="@+id/fileBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/titillium_web_regular"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>