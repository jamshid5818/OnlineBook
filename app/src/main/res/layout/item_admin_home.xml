<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageBookAdmin"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:src="@drawable/quran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/book_name_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageBookAdmin"
        app:layout_constraintStart_toStartOf="@+id/imageBookAdmin"
        app:layout_constraintEnd_toEndOf="@+id/imageBookAdmin"
        android:textSize="12sp"
        android:text="O'tgan kunlar"
        android:fontFamily="@font/titillium_web_bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/authorNameAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/book_name_admin"
        app:layout_constraintStart_toStartOf="@+id/imageBookAdmin"
        app:layout_constraintEnd_toEndOf="@+id/imageBookAdmin"
        android:text="Shayx Muxammad Sodiq Muhammad Yusuf"
        android:textSize="12sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/amoundSold"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/authorNameAdmin"
        android:gravity="end"
        android:textColor="@color/black"
        android:fontFamily="@font/titillium_web_black"
        android:textSize="16sp"
        android:text="134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageDownload"
        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageDownload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_download_for_offline_24"
        app:layout_constraintStart_toEndOf="@+id/amoundSold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>